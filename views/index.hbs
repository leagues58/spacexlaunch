<!DOCTYPE html>
<html>
<head>
   <title>spacexlaunch.org</title>
   <meta charset="utf-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">

   <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
   <!--Import Google Icon Font-->
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
   <!--Import materialize.css-->
   <link type="text/css" rel="stylesheet" href="../stylesheets/materialize.css"  media="screen,projection"/>

   <!--Let browser know website is optimized for mobile-->
   <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

</head>

<body>
   {{>navbar}}
   <div class="container">
      <header>
         <h1 class="white-text">Upcoming launches.</h1>
      </header>
         {{#if launches}}
         {{launches.length}}
            {{#each launches}}
               
               <div class="row">
                  <div class="col s12 m6 l4">
                     <div class="card blue-grey darken-3">
                        <div class="card-content white-text">
                           <span class="card-title">{{this.mission_name}}</span>
                           <span>{{this.launch_date_local}}</span><br>
                           <span>{{this.rocket.rocket_name}}</span><br>
                           <span>Flight: {{this.flight_number}}</span><br>
                        </div>
                        <div class="card-action">
                           <a href="{{this.links.reddit_campaign}}">More info from reddit</a>                           
                        </div>
                     </div>
                  </div>
               </div>
            {{/each}}
         {{else}}
            No data!
         {{/if}}
    </div>

    <script type="text/javascript" src="../javascripts/materialize.js"></script>
    <script>

      // init navbar
      var elemNav = document.querySelector('.sidenav');
      var instanceNav = M.Sidenav.init(elemNav, {});

      // init FAB
      elemFAB = document.querySelector('.fixed-action-btn');
      instanceFAB = M.FloatingActionButton.init(elemFAB, {});
    </script>
  </body>
</html>









