<!DOCTYPE html>
<html>
  <head>
    <title>spacexlaunch.org</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">

  </head>
 <body>
    {{>navHeader}}
    <header>
      <h1 class="heading">All launches.</h1>
    </header>
    <main>
      <section class="cards">
        {{#each datastuff}}
          <a href="#{{id}}" class="card {{rocket_class}}">
            <p>{{name}}</p>
            <p><b>{{location.name}}</b>: {{location.city}}, {{location.state}}</p>
          </a>
          <a href="#_" class="lightbox" id="{{id}}">
            <div class="large-card">
              <h2>{{name}}</h2>
              <p><b>{{location.name}}</b>: {{location.city}}, {{location.state}}</p>
              <p>{{notes}}</p>
            </div>
          </a>
        {{/each}}
      </section>
    </main>
  </body>
</html>
